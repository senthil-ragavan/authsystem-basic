<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4" style="width: 500px; border-radius: 15px;">
    <h2 class="text-center mb-4">Sign Up</h2>

    <%= form_with model: @user, url: users_path, local: true, class: "form" do |f| %>
      
      <div class="row mb-3 align-items-center">
        <div class="col-4 text-end">
          <%= f.label :name, "Full Name", class: "form-label fw-bold" %>
        </div>
        <div class="col-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your name", required: true %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-4 text-end">
          <%= f.label :email, class: "form-label fw-bold" %>
        </div>
        <div class="col-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
        </div>
      </div>

      <div class="row mb-3 align-items-center">
        <div class="col-4 text-end">
          <%= f.label :password, class: "form-label fw-bold" %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter a password", required: true %>
        </div>
      </div>

      <div class="d-grid mt-4">
        <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
